<Button>:
    font_size: 40
    color: 0.3, 0.6, 0.7, 1
    size_hint: 0.3, 0.3

<FloatLayout>:
    Button:
        pos_hint: {"x": 0.5, "top": 1}
        text: "Chad is"

    Button:
        id: btn
        pos_hint: {"y": 0.3}
        text: "cool" if btn == "normal" else "cool"
        background_color: 0.3, -0.4, 0.3, 1